fresh freshshell/fresh bin/fresh --bin
PRIV="https://jeroentbt@bitbucket.org/jeroentbt/dotfiles-private.git"

# determine what OS/distro we're on
source ~/.dotfiles/lib/OS.sh

fresh freshshell/fresh contrib/source-build.sh --file=~/.bash_profile
fresh freshshell/fresh contrib/source-build.sh --file=~/.bashrc

fresh shell/aliases/\*

if [[ $BASHRC_OS == 'Darwin' ]]; then
   fresh shell/completion/homebrew-completion.sh
fi

fresh shell/\*   

fresh config/gitconfig --file
fresh $PRIV config/gitconfig --file

fresh $PRIV config/ssh-config --file="~/.ssh/config"

# Some new/extra commands
## terminal utilities
fresh pengwynn/dotfiles bin/termcolors --bin # echoes colors to terminal
## git etc
fresh twe4ked/dotfiles bin/gh --bin # to open current project in browser
## web related
fresh alrra/dotfiles bin/httpcompression --bin
