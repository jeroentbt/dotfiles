set $mode_system System:  (l) lock  (s) suspend  (h) hibernate  (O) logout  (R) reboot  (S) shutdown  |  i3:  (c) reload config  (r) restart
mode "$mode_system" {
     # lock screen
     bindsym l exec i3lock -c 424242, mode "default"
     # logout (exit i3)
     ## confirmation with nagbar (requires mouse)
     # bindsym o exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
     ## confirmation with dmenu
     ## see https://faq.i3wm.org/question/1262/exiting-i3-without-mouse-click/?answer=1263#post-id-1263
     bindsym Shift+o exit
     # suspend first locks screen (see /etc/systemd/system/suspend@.service)
     bindsym s exec systemctl suspend, mode "deault"
     bindsym h exec systemctl hibernate, mode "default"
     bindsym Shift+r exec systemctl reboot
     bindsym Shift+s exec systemctl poweroff

     # reload the configuration file
     bindsym c reload, mode "default"
     # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
     bindsym r restart, mode "default"

     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+F2 mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt
        # finer control with Shift
        bindsym Shift+j resize shrink width 2 px or 2 ppt
        bindsym Shift+k resize grow height 2 px or 2 ppt
        bindsym Shift+l resize shrink height 2 px or 2 ppt
        bindsym Shift+semicolon resize grow width 2 px or 2 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        # finer control with Shift
        bindsym Shift+Left resize shrink width 2 px or 2 ppt
        bindsym Shift+Down resize grow height 2 px or 2 ppt
        bindsym Shift+Up resize shrink height 2 px or 2 ppt
        bindsym Shift+Right resize grow width 2 px or 2 ppt
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

